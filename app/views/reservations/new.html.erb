<!-- new.html.erb -->
<div class="container">
  <div class="row">
    <div class="col-12 text-center title">
      <h1>新規予約画面</h1>
    </div>
    <div class="col-12 mt-3 content">
      <%= form_with model: @reservation, local: true, class: 'form', url: reservations_path, method: :post do |form| %>
        <%= render 'layouts/error_messages', object: @reservation %>

        <div class="day form-group">
          <%= form.label :day, '日付' %>
          <%= form.date_field :day, class: 'form-control' %>
        </div>

        <div class="time form-group">
          <%= form.label :time, '時間' %>
          <%= form.time_field :time, class: 'form-control' %>
        </div>

        <%= form.hidden_field :user_id, value: current_user.id %>
        <%= form.hidden_field :start_time, value: @start_time %>

        <div class="submit">
          <%= form.submit value: '予約する', class: 'btn btn-primary mx-auto d-block' %>
        </div>
      <% end %>

      <div class="col-12 text-right">
        <%= link_to '戻る', reservations_path %>
      </div>
    </div>
  </div>
</div>
